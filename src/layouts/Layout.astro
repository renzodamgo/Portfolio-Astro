---
import "../styles/global.css";
import Analytics from "@vercel/analytics/astro";
import SpeedInsights from "@vercel/speed-insights/astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Renzo Damian - Software Developer</title>
    <meta name="theme-color" content="#000000" />
    <meta
      name="description"
      content="ML & Robotics Software Engineer and Team Lead based in Sheffield, UK. M.S. Computer Science student focusing on AI and autonomous systems. Formerly Fullstack Developer at Bevertec."
    />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;700&display=swap"
      rel="stylesheet"
      media="print"
      onload="this.media='all'"
    />
    <noscript
      ><link
        href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;700&display=swap"
        rel="stylesheet"
      /></noscript
    >
  </head>
  <body>
    <SpeedInsights />
    <Analytics />
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    font-family: "Space Grotesk", sans-serif;
		font-display: swap;
  }
  ,
  h1,
  h2,
  h3,
  h4 {
    font-family: "Special Gothic Expanded One", sans-serif;
  }
</style>
