---
// Define the props with TypeScript
export interface Props {
  title: string;
  description: string;
  github_link: string;
}

const { title, description, github_link } = Astro.props;
---

<div>
  <h4 class="font-bold">{title}</h4>
  <div class="flex flex-col text-sm">
    <h4 class="italic">{description}</h4>
    <a class="underline font-bold pt-1" href={github_link} target="_blank" rel="noopener noreferrer">Github</a>
  </div>
</div>
