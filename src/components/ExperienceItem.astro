---
// Define the props with TypeScript
export interface Props {
  title: string;
  employer: string;
  date: string;
}

const { title, employer, date } = Astro.props;
---

<div>
  <h4 class="font-bold">{title}</h4>
  <div class="flex justify-between italic text-sm">
    <h4 class="italic">{employer}</h4>
    <p class="">{date}</p>
  </div>
</div>